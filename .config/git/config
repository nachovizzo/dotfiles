[includeIf "gitdir:~/Developer/"]
    path = ~/.config/git/personal
[includeIf "gitdir:~/Developer/dexory/"]
    path = ~/.config/git/professional
[core]
    editor = nvim
    pager = diff-so-fancy | less --tabs=4 -RFX
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[push]
	default = current
[diff]
    tool = meld
[merge]
	tool = meld
[mergetool "meld"]
    trustExitCode = true
    cmd = GTK_THEME=Adwaita:light meld "$LOCAL" "$BASE" "$REMOTE"
[difftool]
    prompt = false
[color]
    ui = true
[pager]
    branch = false
[color "diff"]
    meta = 11
    frag = magenta bold
    func = 146 bold
    commit = yellow
    old = red
    new = green
    whitespace = red reverse
[interactive]
    diffFilter = diff-so-fancy --patch
[diff-so-fancy]
	markEmptyLines = false
[init]
	defaultBranch = main
[alias]
    patch = !git --no-pager diff
